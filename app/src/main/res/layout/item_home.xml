<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="11dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/people1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="Hailey Nolan"
            android:textColor="@color/qoratext"
            android:textSize="13sp"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintLeft_toRightOf="@id/card"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_trans"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="Hailey Nolan"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/qoratext"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card" />

        <androidx.cardview.widget.CardView
            android:layout_width="104dp"
            android:layout_height="37dp"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21dp"
                android:background="@drawable/teng" />

            <TextView
                android:id="@+id/item_sum"
                android:layout_width="41dp"
                android:layout_height="25dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="21dp"
                android:gravity="center"
                android:text="3,520"
                android:textColor="@color/qoratext"
                android:textSize="14sp"
               android:fontFamily="@font/inter_semibold" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>